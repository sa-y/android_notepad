<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.routine_work.notepad"
	android:versionCode="5"
	android:versionName="0.1.5"
	android:installLocation="auto"
>
	<uses-sdk android:minSdkVersion="11" android:targetSdkVersion="11" />

	<application
		android:label="@string/app_name"
		android:icon="@drawable/ic_launcher_notepad"
		android:theme="@style/Theme.Notepad.Dark"
		android:debuggable="true"
	>
		<!--
		android:uiOptions="splitActionBarWhenNarrow"
		-->

		<activity
			android:name=".NotepadActivity"
			android:launchMode="singleTop"
			android:label="@string/app_name"
		>
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>

			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<action android:name="android.intent.action.EDIT" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.dir/vnd.routine_work.note" />
			</intent-filter>

			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>

			<meta-data android:name="android.app.searchable" android:resource="@xml/note_searchable"/>    
			<!--
			<meta-data android:name="android.app.searchable" android:resource="@xml/note_searchable"/>    
			<meta-data android:name="android.app.searchable" android:resource="@xml/recent_query_word_searchable"/>    
			-->
		</activity>

		<activity
			android:name=".DeleteNotesActivity" 
			android:label="@string/delete_notes_title"
		>
			<intent-filter>
				<action android:name="android.intent.action.DELETE" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.dir/vnd.routine_work.note" />
			</intent-filter>
		</activity>

		<activity
			android:name=".NoteDetailActivity" 
			android:label="@string/view_note_title"
			android:launchMode="singleTop"
		>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<action android:name="android.intent.action.EDIT" />
				<action android:name="android.intent.action.DELETE" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.item/vnd.routine_work.note" />
			</intent-filter>

			<intent-filter>
				<action android:name="android.intent.action.INSERT" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.dir/vnd.routine_work.note" />
			</intent-filter>

		</activity>

		<activity
			android:name=".PickNoteActivity" 
			android:label="@string/select_note_title"
		>
			<intent-filter>
				<action android:name="android.intent.action.PICK" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.item/vnd.routine_work.note" />
			</intent-filter>
		</activity>

		<activity
			android:name=".EditDailyNoteActivity"
			android:label="@string/daily_note"
		>
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".CreateNoteShortcutActivity" >
			<intent-filter>
				<action android:name="android.intent.action.CREATE_SHORTCUT" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".prefs.NotepadPreferenceActivity"
			android:label="@string/preferences_title"
		/>

		<activity android:name=".prefs.InitializePreferenceActivity" 
			android:label="@string/initialize_preference"
			android:theme="@android:style/Theme.Holo.Dialog"
		/>

		<activity android:name=".prefs.AboutAppActivity" 
			android:label="@string/about_app_title"
		/>


		<!-- notes content provider -->
		<provider
			android:name=".provider.NoteProvider"
			android:authorities="org.routine_work.notepad.noteprovider"
		/>

		<provider
			android:name=".provider.RecentQueryTextSuggestionProvider"
			android:authorities="org.routine_work.notepad.recent_query_text_suggestion_provider"
		/>

		<meta-data
			android:name="android.app.default_searchable"
			android:value=".NotepadActivity"
		/>

	</application>

	<!--
	<uses-permission android:name="android.permission.INTERNET" />
	-->
</manifest> 
