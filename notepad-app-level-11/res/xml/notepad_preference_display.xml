<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

	<PreferenceCategory android:title="@string/theme_category_title" >
		<ListPreference
			android:key="@string/notepad_theme_key"
			android:defaultValue="@string/notepad_theme_default_value"
			android:title="@string/notepad_theme"
			android:dialogTitle="@string/notepad_theme_title"
			android:entries="@array/notepad_theme_entries"
			android:entryValues="@array/notepad_theme_values"
		/>
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/note_list_category_title" >
		<ListPreference
			android:key="@string/note_list_layout_port_key"
			android:defaultValue="@string/note_list_layout_port_default_value"
			android:title="@string/note_list_layout_port_title"
			android:dialogTitle="@string/note_list_layout_port_title"
			android:entries="@array/note_list_layout_entries"
			android:entryValues="@array/note_list_layout_values"
		/>
		<ListPreference
			android:key="@string/note_list_layout_land_key"
			android:defaultValue="@string/note_list_layout_land_default_value"
			android:title="@string/note_list_layout_land_title"
			android:dialogTitle="@string/note_list_layout_land_title"
			android:entries="@array/note_list_layout_entries"
			android:entryValues="@array/note_list_layout_values"
		/>
		<CheckBoxPreference
			android:key="@string/note_list_item_modified_time_visibility_port_key"
			android:defaultValue="@bool/note_list_item_modified_time_visibility_port_default_value"
			android:title="@string/note_list_item_modified_time_visibility_port_title"
			android:summaryOn="@string/note_list_item_modified_time_visibility_summary_on"
			android:summaryOff="@string/note_list_item_modified_time_visibility_summary_off"
		/>
		<CheckBoxPreference
			android:key="@string/note_list_item_modified_time_visibility_land_key"
			android:defaultValue="@bool/note_list_item_modified_time_visibility_land_default_value"
			android:title="@string/note_list_item_modified_time_visibility_land_title"
			android:summaryOn="@string/note_list_item_modified_time_visibility_summary_on"
			android:summaryOff="@string/note_list_item_modified_time_visibility_summary_off"
		/>
		<ListPreference
			android:key="@string/note_list_item_content_lines_port_key"
			android:defaultValue="@string/note_list_item_content_lines_port_default_value"
			android:title="@string/note_list_item_content_lines_port_title"
			android:dialogTitle="@string/note_list_item_content_lines_port_title"
			android:summary="@string/note_list_item_content_lines_summary"
			android:entries="@array/note_list_item_content_lines_values"
			android:entryValues="@array/note_list_item_content_lines_values"
		/>
		<ListPreference
			android:key="@string/note_list_item_content_lines_land_key"
			android:defaultValue="@string/note_list_item_content_lines_land_default_value"
			android:title="@string/note_list_item_content_lines_land_title"
			android:dialogTitle="@string/note_list_item_content_lines_land_title"
			android:summary="@string/note_list_item_content_lines_summary"
			android:entries="@array/note_list_item_content_lines_values"
			android:entryValues="@array/note_list_item_content_lines_values"
		/>
		<!-- note list sort order -->
		<ListPreference
			android:key="@string/note_list_sort_order_key"
			android:defaultValue="@string/note_list_sort_order_default_value"
			android:title="@string/note_list_sort_order_title"
			android:dialogTitle="@string/note_list_sort_order_title"
			android:entries="@array/note_list_sort_order_entries"
			android:entryValues="@array/note_list_sort_order_values"
		/>
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/note_autolink_category_title" >
		<CheckBoxPreference
			android:key="@string/note_title_autolink_key"
			android:defaultValue="@bool/note_title_autolink_default_value"
			android:title="@string/note_title_autolink_title"
			android:summaryOn="@string/note_title_autolink_summary_on"
			android:summaryOff="@string/note_title_autolink_summary_off"
		/>
		<CheckBoxPreference
			android:key="@string/note_content_autolink_key"
			android:defaultValue="@bool/note_content_autolink_default_value"
			android:title="@string/note_content_autolink_title"
			android:summaryOn="@string/note_content_autolink_summary_on"
			android:summaryOff="@string/note_content_autolink_summary_off"
		/>
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/actionbar_category_title" >
		<CheckBoxPreference
			android:key="@string/actionbar_auto_hide_port_key"
			android:defaultValue="@bool/actionbar_auto_hide_port_default_value"
			android:title="@string/actionbar_auto_hide_port_title"
			android:summaryOn="@string/actionbar_auto_hide_summary_on"
			android:summaryOff="@string/actionbar_auto_hide_summary_off"
		/>
		<CheckBoxPreference
			android:key="@string/actionbar_auto_hide_land_key"
			android:defaultValue="@bool/actionbar_auto_hide_land_default_value"
			android:title="@string/actionbar_auto_hide_land_title"
			android:summaryOn="@string/actionbar_auto_hide_summary_on"
			android:summaryOff="@string/actionbar_auto_hide_summary_off"
		/>
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/capitalization_category_title" >
		<CheckBoxPreference
			android:key="@string/capitalization_title_key"
			android:defaultValue="@bool/capitalization_title_default_value"
			android:title="@string/capitalization_title_title"
			android:summaryOn="@string/capitalization_title_summary_on"
			android:summaryOff="@string/capitalization_title_summary_off"
		/>
		<CheckBoxPreference
			android:key="@string/capitalization_content_key"
			android:defaultValue="@bool/capitalization_content_default_value"
			android:title="@string/capitalization_content_title"
			android:summaryOn="@string/capitalization_content_summary_on"
			android:summaryOff="@string/capitalization_content_summary_off"
		/>
	</PreferenceCategory>
</PreferenceScreen>
