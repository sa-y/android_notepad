<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="note_list_item_title">
		<item name="android:layout_margin">2dip</item>
		<item name="android:layout_gravity">left</item>
		<item name="android:gravity">left</item>
		<item name="android:singleLine">@string/note_list_item_title_singleLine</item>
		<item name="android:lines">@string/note_list_item_title_lines</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:textSize">@dimen/note_list_item_title_textSize</item>
		<item name="android:textColor">?android:attr/textColorPrimary</item>
	</style>

	<style name="note_list_item_content">
		<item name="android:layout_margin">2dip</item>
		<item name="android:gravity">left</item>
		<item name="android:singleLine">@string/note_list_item_content_singleLine</item>
		<item name="android:lines">@string/note_list_item_content_lines</item>
		<item name="android:ellipsize">end</item>
		<item name="android:textSize">@dimen/note_list_item_content_textSize</item>
		<item name="android:textColor">?android:attr/textColorSecondary</item>
	</style>

	<style name="note_list_item_modified">
		<item name="android:layout_margin">2dip</item>
		<item name="android:layout_gravity">right|center_vertical</item>
		<item name="android:gravity">right</item>
		<item name="android:textSize">@dimen/note_list_item_modified_textSize</item>
		<item name="android:textColor">?android:attr/textColorSecondary</item>
	</style>

</resources>
