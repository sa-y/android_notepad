<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- EditText -->
	<style name="Widget.Holo.Dark.EditText" parent="@android:style/Widget.EditText" >
		<item name="android:textColor" >@color/primary_text_holo_dark</item>
		<item name="android:background" >@drawable/edit_text_holo_dark</item>
	</style>

	<style name="Widget.Holo.Light.EditText" parent="@android:style/Widget.EditText" >
		<item name="android:textColor" >@color/primary_text_holo_light</item>
		<item name="android:background" >@drawable/edit_text_holo_light</item>
	</style>

	<!-- ListView -->
	<style name="Widget.Notepad.ListView" parent="@android:style/Widget.ListView" >
		<item name="android:listSelector" >@drawable/list_selector</item>
	</style>

	<!-- Dark Theme -->
	<style name="Theme.Notepad.Dark" parent="@android:style/Theme.NoTitleBar" >
		<item name="android:textColorPrimary">@color/primary_text_holo_dark</item>
		<item name="android:textColorSecondary">@color/secondary_text_holo_dark</item>
		<item name="android:editTextStyle">@style/Widget.Holo.Dark.EditText</item>
		<item name="android:listViewStyle">@style/Widget.Notepad.ListView</item>

		<item name="ic_add">@drawable/ic_add_dark</item>
		<item name="ic_clear">@drawable/ic_clear_dark</item>
		<item name="ic_delete">@drawable/ic_delete_dark</item>
		<item name="ic_edit">@drawable/ic_edit_dark</item>
		<item name="ic_home">@drawable/ic_home_dark</item>
		<item name="ic_search">@drawable/ic_search_dark</item>
		<item name="ic_ok">@drawable/ic_ok_dark</item>
		<item name="ic_lock">@drawable/ic_lock_dark</item>
		<item name="ic_unlock">@drawable/ic_unlock_dark</item>
		<item name="ic_prev">@drawable/ic_prev_dark</item>
		<item name="ic_next">@drawable/ic_next_dark</item>

		<item name="foundWordBackgroundColor">#CC00BB88</item>
		<item name="foundWordForegroundColor">#FFEEEEEE</item>
		<item name="selectedWordBackgroundColor">#CC00EEBB</item>
		<item name="selectedWordForegroundColor">#FFFFFFFF</item>
	</style>

	<!-- Light Theme -->
	<style name="Theme.Notepad.Light" parent="@android:style/Theme.Light.NoTitleBar" >
		<item name="android:textColorPrimary">@color/primary_text_holo_light</item>
		<item name="android:textColorSecondary">@color/secondary_text_holo_light</item>
		<item name="android:editTextStyle">@style/Widget.Holo.Light.EditText</item>
		<item name="android:listViewStyle">@style/Widget.Notepad.ListView</item>

		<!-- Preference styles -->  
		<!--
		<item name="preferenceScreenStyle">@android:style/Preference.PreferenceScreen</item>  
		<item name="preferenceCategoryStyle">@android:style/Preference.Category</item>  
		<item name="preferenceStyle">@android:style/Preference</item>  
		<item name="preferenceInformationStyle">@android:style/Preference.Information</item>  
		<item name="checkBoxPreferenceStyle">@android:style/Preference.CheckBoxPreference</item>  
		<item name="yesNoPreferenceStyle">@android:style/Preference.DialogPreference.YesNoPreference</item>  
		<item name="dialogPreferenceStyle">@android:style/Preference.DialogPreference</item>  
		<item name="editTextPreferenceStyle">@android:style/Preference.DialogPreference.EditTextPreference</item>  
		<item name="ringtonePreferenceStyle">@android:style/Preference.RingtonePreference</item>  
		<item name="preferenceLayoutChild">@android:layout/preference_child</item>  
		-->

		<item name="ic_add">@drawable/ic_add_light</item>
		<item name="ic_clear">@drawable/ic_clear_light</item>
		<item name="ic_delete">@drawable/ic_delete_light</item>
		<item name="ic_edit">@drawable/ic_edit_light</item>
		<item name="ic_home">@drawable/ic_home_light</item>
		<item name="ic_search">@drawable/ic_search_light</item>
		<item name="ic_ok">@drawable/ic_ok_light</item>
		<item name="ic_lock">@drawable/ic_lock_light</item>
		<item name="ic_unlock">@drawable/ic_unlock_light</item>
		<item name="ic_prev">@drawable/ic_prev_light</item>
		<item name="ic_next">@drawable/ic_next_light</item>

		<item name="foundWordBackgroundColor">#CC00BB88</item>
		<item name="foundWordForegroundColor">#FF111111</item>
		<item name="selectedWordBackgroundColor">#CC00EEBB</item>
		<item name="selectedWordForegroundColor">#FF000000</item>
	</style>

	<!-- Dialog Theme -->
	<style name="DialogWindowTitle" >
		<item name="android:maxLines">1</item>
		<item name="android:scrollHorizontally">true</item>
		<item name="android:background">@drawable/dialog_title_bg</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textAppearance">?android:textAppearance</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#FF00C99B</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingLeft">8dip</item>
	</style>

	<!-- Dark Dialog -->
	<style name="Theme.Notepad.Dark.Dialog" >
		<item name="android:windowFrame">@null</item>
		<item name="android:windowBackground">@drawable/dialog_bg_holo_dark</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowNoTitle">false</item>
		<item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
	</style>

	<!-- Light Dialog -->
	<style name="Theme.Notepad.Light.Dialog" >
		<item name="android:windowFrame">@null</item>
		<item name="android:windowBackground">@drawable/dialog_bg_holo_light</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowNoTitle">false</item>
		<item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
	</style>
</resources>
