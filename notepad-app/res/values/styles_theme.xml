<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Widget.Holo.Dark.EditText" parent="@android:style/Widget.EditText" >
		<item name="android:textColor" >@color/primary_text_holo_dark</item>
		<item name="android:background" >@drawable/edit_text_holo_dark</item>
	</style>

	<style name="Widget.Holo.Light.EditText" parent="@android:style/Widget.EditText" >
		<item name="android:textColor" >@color/primary_text_holo_light</item>
		<item name="android:background" >@drawable/edit_text_holo_light</item>
	</style>

	<style name="Theme.Notepad.Dark" parent="@android:style/Theme.NoTitleBar" >
		<item name="android:editTextStyle">@style/Widget.Holo.Dark.EditText</item>
		<item name="ic_add">@drawable/ic_add_dark</item>
		<item name="ic_clear">@drawable/ic_clear_dark</item>
		<item name="ic_delete">@drawable/ic_delete_dark</item>
		<item name="ic_edit">@drawable/ic_edit_dark</item>
		<item name="ic_home">@drawable/ic_home_dark</item>
		<item name="ic_search">@drawable/ic_search_dark</item>
		<!--<item name="actionBarTitleStyle">@style/Widget.Dark.ActionBarTitle</item>-->  
	</style>

	<style name="Theme.Notepad.Light" parent="@android:style/Theme.Light.NoTitleBar" >
		<item name="android:editTextStyle">@style/Widget.Holo.Light.EditText</item>
		<item name="ic_add">@drawable/ic_add_light</item>
		<item name="ic_clear">@drawable/ic_clear_light</item>
		<item name="ic_delete">@drawable/ic_delete_light</item>
		<item name="ic_edit">@drawable/ic_edit_light</item>
		<item name="ic_home">@drawable/ic_home_light</item>
		<item name="ic_search">@drawable/ic_search_light</item>
		<!--<item name="actionBarTitleStyle">@style/Widget.Light.ActionBarTitle</item>-->  
	</style>
</resources>
