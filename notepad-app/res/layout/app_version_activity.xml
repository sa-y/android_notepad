<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/body"
>
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
	>
		<!-- app icon -->
		<FrameLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0"
			android:layout_gravity="center_horizontal"
			android:padding="@dimen/about_app_icon_frame_padding"
		>
			<include layout="@layout/app_version_icon" />
		</FrameLayout>

		<!-- separator line -->
		<View
			style="@style/hline"
			android:layout_margin="10dip"
		/>

		<!-- app infomation -->
		<FrameLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0"
			android:layout_gravity="center_horizontal"
			android:padding="@dimen/about_app_info_frame_padding"
		>
			<include layout="@layout/app_version_info" />
		</FrameLayout>

	</LinearLayout>

</FrameLayout>