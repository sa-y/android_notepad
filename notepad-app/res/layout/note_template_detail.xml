<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/body"
	android:orientation="vertical"
>
	<EditText
		android:id="@+id/note_template_name_edittext"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0"
		android:lines="1"
		android:inputType="text"
		android:hint="@string/template_name"
	/>

	<EditText
		android:id="@+id/note_template_title_edittext"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0"
		android:lines="1"
		android:inputType="text"
		android:hint="@string/title_template"
	/>

	<EditText
		android:id="@+id/note_template_content_edittext"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:minLines="2"
		android:inputType="textMultiLine"
		android:gravity="left|top"
		android:hint="@string/text_template"
	/>
</LinearLayout>