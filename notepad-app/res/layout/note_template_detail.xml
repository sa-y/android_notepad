<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
>
	<LinearLayout
		style="@style/body"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
	>
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0"
			android:paddingLeft="4dip"
			android:text="@string/name"
			android:background="#6666"
	/>

		<FrameLayout
			style="?attr/editTextLikedStyle"
			android:id="@+id/note_template_name_container"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
		>
			<TextView
				android:id="@+id/note_template_name_textview"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="0"
				android:layout_margin="2dip"
				android:hint="@string/template_name"
			/>
		</FrameLayout>

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0"
			android:paddingLeft="4dip"
			android:text="@string/title"
			android:background="#6666"
	/>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0"
			android:layout_margin="2dip"
			android:orientation="horizontal"
		>
			<FrameLayout
				style="?attr/editTextLikedStyle"
				android:id="@+id/note_template_title_container"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_weight="1"
			>
				<TextView
					android:id="@+id/note_template_title_textview"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_margin="2dip"
					android:layout_gravity="bottom"
					android:hint="@string/title_template"
				/>
			</FrameLayout>

			<CheckBox
				android:id="@+id/note_template_title_lock_checkbox"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="0"
				android:layout_margin="2dip"
				android:text="@string/lock"
		/>
		</LinearLayout>

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0"
			android:paddingLeft="4dip"
			android:text="@string/text"
			android:background="#6666"
	/>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0"
			android:layout_margin="2dip"
			android:orientation="horizontal"
		>
			<LinearLayout
				style="?attr/editTextLikedStyle"
				android:id="@+id/note_template_content_container"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
			>
				<TextView
					android:id="@+id/note_template_content_textview"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_margin="2dip"
					android:gravity="left|top"
					android:minLines="4"
					android:hint="@string/text_template"
				/>
			</LinearLayout>

			<CheckBox
				android:id="@+id/note_template_content_lock_checkbox"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="0"
				android:layout_margin="2dip"
				android:text="@string/lock"
		/>
		</LinearLayout>

	</LinearLayout>
</ScrollView>