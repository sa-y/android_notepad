<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- EditText -->
	<style name="Widget.Notepad.Dark.EditText" parent="@android:style/Widget.Holo.EditText" >
		<item name="android:textColor" >@color/primary_text_holo_dark</item>
	</style>

	<style name="Widget.Notepad.Light.EditText" parent="@android:style/Widget.Holo.Light.EditText" >
		<item name="android:textColor" >@color/primary_text_holo_light</item>
	</style>

	<!-- Dark Theme -->
	<style name="Theme.Notepad.Dark" parent="@android:style/Theme.Holo" >
		<item name="android:textColorPrimary">@color/primary_text_holo_dark</item>
		<item name="android:textColorSecondary">@color/secondary_text_holo_dark</item>
		<item name="android:editTextStyle">@style/Widget.Notepad.Dark.EditText</item> 

		<item name="ic_lock">@drawable/ic_lock_dark</item>
		<item name="ic_unlock">@drawable/ic_unlock_dark</item>
		<item name="ic_prev">@drawable/ic_prev_dark</item>
		<item name="ic_next">@drawable/ic_next_dark</item>

		<item name="foundWordBackgroundColor">#CC00BB88</item>
		<item name="foundWordForegroundColor">#FFEEEEEE</item>
		<item name="selectedWordBackgroundColor">#CC00EEBB</item>
		<item name="selectedWordForegroundColor">#FFFFFFFF</item>
	</style>

	<!-- Light Theme -->
	<style name="Theme.Notepad.Light" parent="@android:style/Theme.Holo.Light" >
		<item name="android:textColorPrimary">@color/primary_text_holo_light</item>
		<item name="android:textColorSecondary">@color/secondary_text_holo_light</item>
		<item name="android:editTextStyle">@style/Widget.Notepad.Light.EditText</item> 

		<item name="ic_lock">@drawable/ic_lock_light</item>
		<item name="ic_unlock">@drawable/ic_unlock_light</item>
		<item name="ic_prev">@drawable/ic_prev_light</item>
		<item name="ic_next">@drawable/ic_next_light</item>

		<item name="foundWordBackgroundColor">#CC00BB88</item>
		<item name="foundWordForegroundColor">#FF111111</item>
		<item name="selectedWordBackgroundColor">#CC00EEBB</item>
		<item name="selectedWordForegroundColor">#FF000000</item>
	</style>

</resources>
